[flake8]
# Исключаем папки, которые не нужно проверять
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env

# E203 и W503 часто конфликтуют с современными форматтерами, их принято игнорировать
ignore = E203, W503

# Максимальная длина строки (стандарт PEP8 - 79, но все используют 88 или 120)
max-line-length = 120